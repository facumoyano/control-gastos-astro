---
import { Image } from "astro:assets";
interface IProps {
    item: object
}

const { item } = Astro.props
---

<div class="bg-white dark:bg-zinc-800 border dark:border-border-zinc-800 border-slate-400 rounded-lg p-4 flex gap-6 shadow-lg">
    <Image src="/images/hombre.png" alt="icon" width={30} height={30} class="object-contain" />
    <div class="flex flex-col gap-2">
        <div>
            <p>{item.title}</p>
        </div>
        <div class="flex gap-6">
            <p>${item.amount}</p>
            <p>{item.date}</p>
            <p>{item.category}</p>
        </div>
    </div>
</div>