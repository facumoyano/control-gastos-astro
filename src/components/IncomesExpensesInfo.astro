---
import { Image } from "astro:assets";
interface IProps {
    item: {
        id: string;
        title: string;
        amount: number;
        date: string;
        category: string;
    }
}

const { item } = Astro.props as IProps

function formatDate(dateString: string) {
    const date = new Date(dateString);
    const day = date.getDate();
    const month = date.getMonth() + 1; // Los meses en JavaScript empiezan en 0
    const year = date.getFullYear();
    const hours = date.getHours();
    const minutes = date.getMinutes();
    const formattedDate = `${day}/${month}/${year} - ${hours}:${minutes < 10 ? '0' : ''}${minutes}pm`;
    return formattedDate;
}
---

<div class="bg-white dark:bg-zinc-800 border dark:border-border-zinc-800 border-slate-400 rounded-lg p-4 flex gap-6 shadow-lg">
    <Image src="/images/hombre.png" alt="icon" width={30} height={30} class="object-contain" />
    <div class="flex flex-col gap-2">
        <div>
            <p>{item.title}</p>
        </div>
        <div class="flex gap-6">
            <p>${item.amount}</p>
            <p>{formatDate(item.date)}</p>
            <p>{item.category}</p>
        </div>
    </div>
</div>