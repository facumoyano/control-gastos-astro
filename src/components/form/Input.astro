---
interface InputProps {
    customClass?: string;
    name: string;
    id: string;
    placeholder: string;
    type: string;
    required?: boolean;
}

const { customClass, name, id, placeholder, type, required } = Astro.props;
---

<input type={type} placeholder={placeholder} required={required} id={id} name={name} class=`bg-white dark:bg-zinc-800 border dark:border-border-zinc-800 border-slate-400 rounded-lg py-2 px-4 ${customClass}` />