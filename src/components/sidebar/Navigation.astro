---
import { unescapeHTML } from "astro/compiler-runtime";

interface ItemsNavProps {
    name: string;
    href: string;
    icon: string;
}

const itemsNav: ItemsNavProps[] = [
    {
        "name": "Dashboard",
        "href": "/",
        "icon": '<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-layout-dashboard" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M4 4h6v8h-6z"></path><path d="M4 16h6v4h-6z"></path><path d="M14 12h6v8h-6z"></path><path d="M14 4h6v4h-6z"></path></svg>',
    },
    {
        "name": "Transacciones",
        "href": "/transactions",
        "icon": '<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-cash" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M7 9m0 2a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v6a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2z"></path><path d="M14 14m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0"></path><path d="M17 9v-2a2 2 0 0 0 -2 -2h-10a2 2 0 0 0 -2 2v6a2 2 0 0 0 2 2h2"></path></svg>'
    },
    {
        "name": "Ingresos",
        "href": "/incomes",
        "icon": '<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-door-enter" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M13 12v.01"></path><path d="M3 21h18"></path><path d="M5 21v-16a2 2 0 0 1 2 -2h6m4 10.5v7.5"></path><path d="M21 7h-7m3 -3l-3 3l3 3"></path></svg>'
    },
    {
        "name": "Egresos",
        "href": "/expenses",
        "icon": '<svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-door-exit" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M13 12v.01"></path><path d="M3 21h18"></path><path d="M5 21v-16a2 2 0 0 1 2 -2h7.5m2.5 10.5v7.5"></path><path d="M14 7h7m-3 -3l3 3l-3 3"></path></svg>'
    }
]
---

<navbar class="mt-20">
    <ul class="flex flex-col gap-3">
        {itemsNav.map( item => (
            <li class="flex gap-2 items-center hover:bg-emerald-500 p-2 rounded-md">
                <div>{unescapeHTML(item.icon)}</div>
                <a href={item.href} class="text-sm font-medium transition duration-100">{item.name}</a>     
            </li>
        ))}
    </ul>
</navbar>